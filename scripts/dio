#!/usr/bin/env argsh
# shellcheck shell=bash
# set -eu -o pipefail

# --- OPTIONS

# --- ACTIONS
# argsh(T|test):              des(Test.)
# argsh(D|deploy):            des(Deploy.)
# argsh(P|server-prepare):    des(Test.)
# argsh(S|ssh):               des(Ssh.)

# --- VARIABLES

# --- MAIN
_main() {
  # dependencies

  # actions
  for ACTION in $ARGSH_ACTIONS; do case "$ACTION" in
    T | test)           test_dio ;;
    D | deploy)         deploy_dio ;;
    P | server-prepare) server_prepare_dio ;;
    S | ssh)            ssh_dio ;;
  esac; done
}

# --- FUNCTIONS

deploy_dio() {
  echo "deploy"
  hcloud context use divramod.io
  hcloud server list
  hcloud floating-ip list

}

server_prepare_dio() {
  echo "server prepare"
  export NVM_DIR="$([ -z "${XDG_CONFIG_HOME-}" ] && printf %s "${HOME}/.nvm" || printf %s "${XDG_CONFIG_HOME}/nvm")"
  [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" # This loads nvm

}

ssh_dio() {
  echo "ssh"
  hcloud context use divramod.io
  ip=$(hcloud server list | tail -n +2 | awk '{ print $4; }')
  ssh -o "StrictHostKeyChecking no" root@"${ip}"
}

test_dio() {
  echo "test"
}

# --- VALIDATORS

# --- RUN
[[ "${0}" != "${BASH_SOURCE[0]}" ]] || _main "${@}"
